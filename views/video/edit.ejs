		<!-- Page Title -->
	<h1 class='pageTitle'>Edit Video Info</h1>

	<!-- form to edit video -->

	<div id="editFormPage" class='vidContainer' >


		
		<form action="/video/<%=videoId%>?_method=PUT" method="POST">


			<!-- Edit Title -->
			<input type="text" name="title" placeholder="<%=title%>"> <br>


			<!-- Video -->
			<div>
				<iframe id="player" type="text/html" src="https://www.youtube.com/embed/<%=videoId%>?enablejsapi=1&origin=http://example.com" width="340" height="190" frameborder="0"></iframe>
			</div>
			

			<!-- Edit Description -->
			<textarea type='text' name="description" placeholder="<%=description%>" maxlength="140"></textarea> <br/>
			<button class='thumbNailBtn'>Update</button>

		</form>
		
	</div>
